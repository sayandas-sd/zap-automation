generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id          Int   @id @default(autoincrement())
  name        String
  email       String
  password    String
}

model Task {
  id    String  @id @default(uuid())

}
 
model Trigger {
  id         String    @id @default(uuid())
  TaskId     String
  type       AvailableTrigger
}

model AvailableTrigger {
  id        String    @id @default(uuid())
  name      String
  triggers  Trigger[]
}

